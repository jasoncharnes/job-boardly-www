<% if current_account.content(:banner_text).present? %>
<div class="flex items-center gap-x-6 bg-blue-600 px-6 py-2.5 sm:px-3.5 sm:before:flex-1" x-show="visible" x-data="{ visible: $persist(true) }">
  <p class="text-sm leading-6 text-white">
    <%= link_to current_account.content(:banner_link) do %>
      <%= current_account.content(:banner_text) %>&nbsp;<span aria-hidden="true">&rarr;</span>
    <% end %>
  </p>
  <div class="flex flex-1 justify-end">
    <button type="button" class="-m-3 p-3 focus-visible:outline-offset-[-4px]" @click="visible = false">
      <span class="sr-only">Dismiss</span>
      <svg class="h-5 w-5 text-white" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
      </svg>
    </button>
  </div>
</div>
<% end %>
